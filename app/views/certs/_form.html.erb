<%= form_for @cert, html: { multipart: true } do |f| %>
  <% if @cert.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cert.errors.count, "error") %> prohibited this pro from being saved:</h2>

      <ul>
      <% @cert.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titulo %><br>
    <%= f.text_field(:title, {:class => 'form-control'}) %>
  </div>
  <div class="field">
    <%= f.label :detalle %><br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </div>
  <div class="field">
    <%= f.label :imagen %><br>
    <%= f.file_field(:image) %>
    <% if f.object.image? %>
      <%= image_tag f.object.image.thumb.url %>
      <%= f.label :remove_image %>
      <%= f.check_box :remove_image %> 
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", :class => 'btn btn-primary' %>
  </div>
<% end %>
