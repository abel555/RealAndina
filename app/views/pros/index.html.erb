
<body id="prods">
<section id="portfolio">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 text-center">
                    <h2 class="section-heading" id="white">Products</h2>
                    <h3 class="section-subheading text-muted" id="white">products of the highest quality.</h3>
            </div>
        </div>
        <% if user_signed_in? %>
           <div class="actions">
                <%= link_to 'New Product', new_pro_path, :class => 'btn btn-primary btn-xs' %>
            </div>
        <% end %>
        <div class="row">
            <% @pros.each do |pro| %>
                <div class="col-md-4 col-sm-6 portfolio-item">
                    <a href="#portfolioModal2" class="portfolio-link" data-toggle="modal">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-responsive" alt=""<%= image_tag pro.image.thumbFull.url %>
                    </a>
                    <div class="portfolio-caption">
                        <h4><%= pro.title %></h4>
                        <p class="text-muted">Nombre en ingles</p>
                        <% if user_signed_in? %>
                            <td><%= link_to 'Edit', edit_pro_path(pro), :class => 'btn btn-warning btn-xs' %></td>
                            <td><%= link_to 'Delete', pro, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs' %></td>
                        <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>
</body>

