
<body id="prods">
<section id="portfolio">
    
    <div class="container-fluid">
        <% if notice %>
            <div class="alert alert-success">
                <strong>
                <div style="text-align: center;">
                    <p id="notice">
                    <%= notice %>
                    </p>
                </div>
                <strong>
            </div>
        <%end%> 
        <div class="row">
            <div class="col-lg-12 text-center">
                    <h2 class="section-heading" id="white">Products</h2>
                    <h3 class="section-subheading text-muted" id="white">Products of the highest quality.</h3>
            </div>
        </div>
        <% if user_signed_in? %>
           <div class="actions">
                <%= link_to 'Agregar Producto', new_pro_path, :class => 'btn btn-primary btn-xs' %>
            </div>
        <% end %>
        <div class="fb-share-button" data-href="<%= request.original_url %>" data-layout="button_count" data-size="small" data-mobile-iframe="false"><a class="fb-xfbml-parse-ignore">Compartir</a></div>
        <br></br>
        
        <div class="row">
            <% @pros.reverse_each do |pro| %>
                <div class="col-md-4 col-sm-6 portfolio-item">
                    <a href="#portfolioModal2" class="portfolio-link" data-toggle="modal">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-responsive" alt=""<%= image_tag pro.image.thumbFull.url %>
                    </a>
                    <div class="portfolio-caption">
                        <h4><%= pro.title %></h4>
                        
                        <% if user_signed_in? %>
                            <td><%= link_to 'Editar', edit_pro_path(pro), :class => 'btn btn-warning btn-xs' %></td>
                            <td><%= link_to 'Eliminar', pro, method: :delete, data: { confirm: 'Esta seguro?' }, :class => 'btn btn-danger btn-xs' %></td>
                        <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>
</body>

