

  <%= form_for @pro, html: { multipart: true } do |f| %>
    <% if @pro.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@pro.errors.count, "error") %> prohibited this pro from being saved:</h2>

        <ul>
        <% @pro.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :titulo %><br>
      <%= f.text_field(:title, {:class => 'form-control', :maxlength=>"50"})%>
    </div>
    
    <div class="field">
      <%= f.label :imagen %><br>
      <%= f.file_field(:image) %>
      <% if f.object.image? %>
        <%= image_tag f.object.image.thumb.url %>
        <%= f.label :remove_image %>
        <%= f.check_box :remove_image %> 
      <% end %>
    </div>
    <div class="actions">
      <%= f.submit"guardar", :class => 'btn btn-primary' %>
    </div>
  <% end %>


